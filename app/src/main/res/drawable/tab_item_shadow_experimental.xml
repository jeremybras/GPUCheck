<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- "shadow" -->
    <item
        android:height="3dp"
        android:gravity="top">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="@android:color/transparent"
                android:startColor="#03000000" />
        </shape>
    </item>
    <item
        android:width="3dp"
        android:gravity="start">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:endColor="@android:color/transparent"
                android:startColor="#03000000" />
        </shape>
    </item>
    <item
        android:width="3dp"
        android:gravity="end">
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:endColor="@android:color/transparent"
                android:startColor="#03000000" />
        </shape>
    </item>

    <item
        android:end="2dp"
        android:start="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/ff_white" />
            <corners
                android:topLeftRadius="4dp"
                android:topRightRadius="4dp" />
        </shape>
    </item>
</layer-list>