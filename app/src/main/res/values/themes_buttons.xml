<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/ff_blue_lighter</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:minWidth">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/ff_white</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="Button.Text">
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:paddingStart">@dimen/margin_big</item>
        <item name="android:paddingEnd">@dimen/margin_big</item>
    </style>

    <style name="Button.Icon">
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:paddingStart">@dimen/margin_medium</item>
        <item name="android:paddingEnd">@dimen/margin_medium</item>
    </style>

    <style name="Button.Text.Icon">
        <item name="android:paddingStart">@dimen/margin_medium</item>
        <item name="android:paddingEnd">@dimen/margin_medium</item>
        <item name="android:paddingTop">@dimen/margin_mini</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:drawablePadding">@dimen/margin_small</item>
    </style>

    <style name="Button.Text.Icon.White">
        <item name="android:backgroundTint">@color/ff_white</item>
        <item name="android:textColor">@color/ff_blue_lighter</item>
    </style>

    <style name="Button.Text.Icon.Disabled">
        <item name="android:backgroundTint">@color/ff_grey_darker</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="Button.Big">
        <item name="android:padding">@dimen/margin_super_big</item>
    </style>

    <style name="Category" parent="Widget.AppCompat.Button">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Category.Checked">
        <item name="android:background">@drawable/button_border_checked</item>
        <item name="android:textColor">@color/ff_blue_lighter</item>
    </style>

    <style name="Category.UnChecked">
        <item name="android:background">@drawable/button_border_unchecked</item>
        <item name="android:textColor">@color/ff_grey_darker</item>
    </style>
</resources>
